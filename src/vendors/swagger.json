  "definitions": {
    "User": {
      "type": "object",
      "required": [
        "_id",
        "name",
        "email",
        "age"
      ],
      "properties": {
        "_id": {
          "type": "string",
          "example": "5b69ab5fd24ad68a651d8d9b"
        },
        "name": {
          "type": "string",
          "example": "Pavel"
        },
        "email": {
          "type": "string",
          "example": "pavel@mail.ru"
        },
        "age": {
          "type": "number",
          "example": 22
        },
        "lastModifiedDate": {
          "type": "string",
          "format": "int32",
          "example": "2018-08-05T09:12:33.001Z"
        }
      },
      "example": {
        "_id": "5b69ab5fd24ad68a651d8d9b",
        "name": "Pavel",
        "email": "pavel@mail.ru",
        "age": 22,
        "lastModifiedDate": "2016-08-05T09:12:33.001Z"
      }
    },
    "Product": {
      "type": "object",
      "required": [
        "_id",
        "name",
        "price"
      ],
      "properties": {
        "_id": {
          "type": "string",
          "example": "5b6438d7cf01f7c936596559"
        },
        "name": {
          "type": "string",
          "example": "Supreme T-Shirt"
        },
        "price": {
          "type": "number",
          "example": 12
        },
        "reviews": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ProductReviews"
          }
        },
        "lastModifiedDate": {
          "type": "string",
          "format": "int32",
          "example": "2016-08-05T09:12:33.001Z"
        }
      },
      "example": {
        "_id": "5b6438d7cf01f7c936596559",
        "name": "Supreme T-Shirt",
        "price": 12,
        "reviews": [
          {
            "stars": 5,
            "comment": "a good product"
          }
        ],
        "lastModifiedDate": "2016-08-05T09:12:33.001Z"
      }
    },
    "City": {
