        "lastModifiedDate": {
          "type": "string",
          "format": "int32",
          "example": "2016-08-05T09:12:33.001Z"
        }
      },
      "example": {
        "_id": "5b3be96388c5363832da0e9e",
        "name": "Grodno",
        "country": "Belarus",
        "capital": false,
        "options": {
          "lat": 53,
          "long": 51
        },
        "lastModifiedDate": "2016-08-05T09:12:33.001Z"
      }
